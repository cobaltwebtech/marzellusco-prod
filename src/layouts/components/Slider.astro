---
import { Image } from "astro:assets";
// Import Swiper styles
import "swiper/css";
import "swiper/css/pagination";
import 'swiper/css/navigation';

//Import slider images
import slider1 from "@/assets/slider-images/slider-1.avif"
import slider2 from "@/assets/slider-images/slider-2.avif"
import slider3 from "@/assets/slider-images/slider-3.avif"

// import required modules
import { Autoplay, Pagination, Navigation } from "swiper/modules";
import { Swiper, SwiperSlide } from "swiper/react";
---
<Swiper
    autoplay={{
        delay: 3000, // Delay between transitions (in milliseconds)
        disableOnInteraction: false // Continue autoplay even after user interaction
    }}
    navigation={true}
    pagination={{
        clickable: true,
        bulletClass: "banner-pagination-bullet",
        bulletActiveClass: "banner-pagination-bullet-active",
    }}
    modules={[Autoplay, Pagination, Navigation]}
>
    <SwiperSlide>
        <div class="row items-center px-7 xl:px-16">
            <div class="sm:col-12 lg:col-6 order-2 lg:order-0">
                <div class="text-center py-10 lg:py-0">
                    <p class="mb-2 lg:mb-3 text-light dark:text-darkmode-light font-medium md:text-xl">
                        Trends may come and go, but the classic crossbody bag is forever. This bag will last and will only get more beautiful as the years go by.
                    </p>
                    <div class="row">
                        <h3 class="mb-4 lg:mb-10 col-10 sm:col-8 lg:col-12 mx-auto">
                            Giving Luxury Back Its Meaning
                        </h3>
                    </div>
                        <a
                            class="btn btn-sm md:btn-lg btn-primary font-medium"
                            href="/products"
                        >
                            Shop Now
                        </a>
                </div>
            </div>

            <div class="sm:col-12 lg:col-6">
                <Image
                src={slider1}
                class="mx-auto w-[388px] lg:w-full"
                width={"507"}
                height={"385"}
                alt="slide image"
                />
            </div>
        </div>
    </SwiperSlide>
    <SwiperSlide>
        <div class="row items-center px-7 xl:px-16">
            <div class="sm:col-12 lg:col-6 order-2 lg:order-0">
                <div class="text-center py-10 lg:py-0">
                    <p class="mb-2 lg:mb-3 text-light dark:text-darkmode-light font-medium md:text-xl">
                        Our bags are handcrafted in Italy. We use genuine Italian Sahara leather that brings timeless style and authenticity to your wardrobe.
                    </p>
                    <div class="row">
                        <h3 class="mb-4 lg:mb-10 col-10 sm:col-8 lg:col-12 mx-auto">
                            100% Handmade Design
                        </h3>
                    </div>
                        <a
                            class="btn btn-sm md:btn-lg btn-primary font-medium"
                            href="/products"
                        >
                            Shop Now
                        </a>
                </div>
            </div>

            <div class="sm:col-12 lg:col-6">
                <Image
                src={slider2}
                class="mx-auto w-[388px] lg:w-full"
                width={"507"}
                height={"385"}
                alt="slide image"
                />
            </div>
        </div>
    </SwiperSlide>
    <SwiperSlide>
        <div class="row items-center px-7 xl:px-16">
            <div class="sm:col-12 lg:col-6 order-2 lg:order-0">
                <div class="text-center py-10 lg:py-0">
                    <p class="mb-2 lg:mb-3 text-light dark:text-darkmode-light font-medium md:text-xl">
                        Our bags are handcrafted in Italy. We use genuine Italian Sahara leather that brings timeless style and authenticity to your wardrobe.
                    </p>
                    <div class="row">
                        <h3 class="mb-4 lg:mb-10 col-10 sm:col-8 lg:col-12 mx-auto">
                            100% Handmade Design
                        </h3>
                    </div>
                        <a
                            class="btn btn-sm md:btn-lg btn-primary font-medium"
                            href="/products"
                        >
                            Shop Now
                        </a>
                </div>
            </div>

            <div class="sm:col-12 lg:col-6">
                <Image
                src={slider1}
                class="mx-auto w-[388px] lg:w-full"
                width={"507"}
                height={"385"}
                alt="slide image"
                />
            </div>
        </div>
    </SwiperSlide>

</Swiper>
